@{
    ViewBag.Title = "ShowResponse";
}

<h2>ShowResponse</h2>

@{
    ViewBag.Title = "ShowResponse";
    var url = ViewBag.RedirectUrl;
    //ViewBag.Alert = ViewBag.Message;
}

<div id="RedirectUrl">@url</div>


@if (!String.IsNullOrEmpty(@ViewBag.Alert))
{
    <div id="dialog-message" style="color:Red; font-weight:bold; display:none;">@ViewBag.Message</div>
    <div class="clear"></div>
}

@section Scripts {
    @*<script src="@Url.Content("~/Scripts/ESLScripts.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/datepickerrange.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var x = document.getElementById("dialog-message");
            var url = $("#RedirectUrl").html();
            if (x) {
                alert(x.innerHTML);
                $("#dialog-message").val("");
                $(location).attr('href', url);
            };
        });

    </script>
}

